							<script type="dojo/method" data-dojo-event="onClick" data-dojo-args="e">
							var self = this;
							require([
								"dojo/_base/xhr",
								"dojo/dom",
								"dojo/topic",
								"dijit/registry",
								"dojox/string/sprintf"
							], function(dojoXhr, dojoDom, dojoTopic) {
								var isInstalled = self.get("appInstalled");
								var module		= self.get("appModule");
								var moduleTitle = self.get("appModuleTitle");
								if (isInstalled) {
									// Show the confirmation dialog
									dojoDom.byId("coreModuleListUninstallConfirmation").innerHTML = "<?php echo sprintf($this->translator()->_('module.uninstall.confirm'), $moduleTitle); ?>";
									dijit.registry.byId("coreModuleListUninstallModuleDialog").set("appModule", module);
									dijit.registry.byId("coreModuleListUninstallModuleDialog").set("appModuleTitle", moduleTitle);
									dijit.registry.byId("coreModuleListUninstallModuleDialog").show();
								} else {
									// Install the selected module
									self.set("disabled", true);
									dijit.registry.byId("coreModuleListStandby").show();
									dojoXhr.post({
										url: "<?php echo $this->url(array(), 'core_module_install'); ?>",
										content: {
											name: module
										},
										handleAs: "json",
										load: function(data) {
											dijit.registry.byId("coreModuleListStandby").hide();
											var message = ("APP_RESULT_OK" == data.result)
														? "<?php echo $this->translator()->_('module.install.success'); ?>"
														: "<?php echo $this->translator()->_('module.install.error'); ?>";
											dojoTopic.publish("/app/global/notification", {
												message: dojox.string.sprintf(message, moduleTitle),
												type: ("APP_RESULT_OK" == data.result) ? "message" : "error"
											});
											self.set("disabled", false);
											if ("APP_RESULT_OK" == data.result) {
												// Reload the current page
												window.location.reload();
											}
										}
									});
								}
							});
							</script>
						</button>
						<!-- /InstallButton -->
					</div>
					
