						require([
							"dojo/_base/xhr",
							"dojo/dom",
							"dojo/topic",
							"dijit/registry",
							"dojox/string/sprintf"
						], function(dojoXhr, dojoDom, dojoTopic) {
							var module		= dijit.registry.byId("coreModuleListUninstallModuleDialog").get("appModule");
							var moduleTitle = dijit.registry.byId("coreModuleListUninstallModuleDialog").get("appModuleTitle");
							if (!module) {
								return;
							}
							dijit.registry.byId("coreModuleListStandby").show();
							dojoXhr.post({
								url: "<?php echo $this->url(array(), 'core_module_uninstall'); ?>",
								content: {
									name: module
								},
								handleAs: "json",
								load: function(data) {
									dijit.registry.byId("coreModuleListStandby").hide();
									dijit.registry.byId("coreModuleListUninstallModuleDialog").hide();
									var message = ("APP_RESULT_OK" == data.result)
												? "<?php echo $this->translator()->_('module.uninstall.success'); ?>" 
												: "<?php echo $this->translator()->_('module.uninstall.error'); ?>";
									dojoTopic.publish("/app/global/notification", {
										message: dojox.string.sprintf(message, moduleTitle),
										type: ("APP_RESULT_OK" == data.result) ? "message" : "error"
									});
									if ("APP_RESULT_OK" == data.result) {
										// Reload the current page
